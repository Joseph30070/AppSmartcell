<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Degradado estilo TikTok -->
    <gradient
        android:type="linear"
        android:angle="45"
        android:startColor="#000000"
        android:centerColor="#25F4EE"
    android:endColor="#FE2C55"
    android:gradientRadius="250" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Sombra/borde fino -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Padding interno -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>