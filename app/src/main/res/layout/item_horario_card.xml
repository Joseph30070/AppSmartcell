<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardHorario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:clipToPadding="false"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtTituloHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curso de ejemplo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/txtDescripcionHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n graciosa o breve del curso"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txtHoraHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lunes a Viernes | 10:00 - 12:00"
            android:textSize="16sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>




