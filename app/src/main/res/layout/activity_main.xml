<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <!-- Botón de tres puntitos (cerrar sesión) -->
    <ImageView
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert"
    android:layout_gravity="end"
    android:padding="16dp"
    android:contentDescription="Menú"
    android:clickable="true"
    android:focusable="true" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_logo_smartcell"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a Smartcell App"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"/>

    <!-- Botones con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <GridLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPaginaWeb"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Página Web"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                app:icon="@drawable/ic_web"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconSize="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCursos"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Mis Cursos"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                app:icon="@drawable/ic_courses"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconSize="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHorario"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Horario"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                app:icon="@drawable/ic_schedule"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconSize="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCuenta"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Mi Cuenta"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                app:icon="@drawable/ic_account"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconSize="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCumpleanos"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Cumpleaños"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                app:icon="@drawable/ic_birthday"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconSize="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnlaces"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Enlaces"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                app:icon="@drawable/ic_links"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconSize="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPagos"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Pagos"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                app:icon="@drawable/ic_payments"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconSize="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIdentificacion"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Identificación"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                app:icon="@drawable/ic_id"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconSize="36dp" />
        </GridLayout>
    </ScrollView>
</LinearLayout>








