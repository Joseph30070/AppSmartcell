<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".NosotrosActivity">

    <!-- Toolbar superior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarNosotros"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Sobre Nosotros"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarNosotros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Texto principal -->
            <TextView
                android:id="@+id/txtPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_principal_nosotros"
                android:textColor="#333333"
                android:textSize="18sp"
                android:lineSpacingExtra="6dp"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- SecciÃ³n: VISIÃ“N -->
            <LinearLayout
                android:id="@+id/layoutVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒŸ Nuestra VisiÃ³n"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_vision_nosotros"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:lineSpacingExtra="5dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- SecciÃ³n: QUÃ‰ OFRECEMOS -->
            <LinearLayout
                android:id="@+id/layoutOfrecemos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš€ QuÃ© Ofrecemos"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_que_ofrecemos"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_final_ofrecemos"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>

            <!-- ðŸ”¹ BotÃ³n "Ver mÃ¡s" al final (ya baja correctamente) -->
            <Button
                android:id="@+id/btnVerMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver mÃ¡s â†’"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:paddingHorizontal="28dp"
                android:paddingVertical="10dp"
                android:textSize="16sp"
                android:elevation="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
















